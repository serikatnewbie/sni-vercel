import rawContests from "@/data/ctftime/ctf_events.json" assert { type: "json" };

export const getEventDisplay = (contest) => {
  const yearMatch = contest.event.match(/\b(20\d{2})\b/);
  const year = yearMatch ? parseInt(yearMatch[1]) : 0;
  const place = parseInt(contest.place);
  let medalEmoji = "";
  
  switch (place) {
    case 1: medalEmoji = "🥇"; break;
    case 2: medalEmoji = "🥈"; break;
    case 3: medalEmoji = "🥉"; break;
    case 4: medalEmoji = "🏅"; break;
  }
  
  const crownEmoji = place === 1 ? "👑" : "";
  const placeSuffix = place > 4 ? ` - ${place}${place === 9 || place === 10 ? "th" : ""} Place` : "";
  
  return `${medalEmoji} ${contest.event} (${year})${crownEmoji}${placeSuffix}`;
};

export const champions = rawContests
  .filter(contest => contest.place === "1")
  .sort((a, b) => {
    const yearA = a.event.match(/\b(20\d{2})\b/);
    const yearB = b.event.match(/\b(20\d{2})\b/);
    return (yearB ? parseInt(yearB[1]) : 0) - (yearA ? parseInt(yearA[1]) : 0);
  });

export const notablePlacements = rawContests
  .filter(contest => {
    const place = parseInt(contest.place);
    return place > 1 && place <= 10;
  })
  .sort((a, b) => {
    const yearA = a.event.match(/\b(20\d{2})\b/);
    const yearB = b.event.match(/\b(20\d{2})\b/);
    return (yearB ? parseInt(yearB[1]) : 0) - (yearA ? parseInt(yearA[1]) : 0);
  });

