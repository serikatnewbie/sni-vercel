import rawContests from "@/data/ctftime/ctf_events.json";

{(() => {
  // Process the raw contests
  const contests = rawContests.map((c) => {
    const yearMatch = c.event.match(/\b(20\d{2})\b/);
    const year = yearMatch ? parseInt(yearMatch[1]) : 0;
    
    return {
      place: c.place,
      event: c.event,
      href: c.href,
      ratingPoints: Number(c.ratingPoints),
      ctfPoints: c.ctfPoints,
      year: year,
    };
  });

  contests.sort((a, b) => (b.year || 0) - (a.year || 0));

  const champions = contests.filter(contest => contest.place === "1");

  const notablePlacements = contests.filter(contest => {
    const place = parseInt(contest.place);
    return place > 1 && place <= 10;
  });

  function getMedalEmoji(place) {
    switch (place) {
      case "1": return "🥇";
      case "2": return "🥈";
      case "3": return "🥉";
      case "4": return "🏅";
      default:  return "";
    }
  }

  function getCrownEmoji(place) {
    return place === "1" ? "👑" : "";
  }

  return (
    <>
      ## 🥇 Champions 👑
      {champions.map(contest => (
        <div>
          {getMedalEmoji(contest.place)} {contest.event} ({contest.year}) {getCrownEmoji(contest.place)}
        </div>
      ))}

      ## 📈 Notable High Placements
      {notablePlacements.map(contest => {
        const place = parseInt(contest.place);
        return (
          <div>
            {getMedalEmoji(contest.place)} {contest.event} ({contest.year})
            {place > 4 ? ` - ${place}${place === 9 ? "th" : place === 10 ? "th" : ""} Place` : ""}
          </div>
        );
      })}
      <div>Finalist - CDDC Brainhack 2024</div>

      ## 🇮🇩 National Events
      <div>Organizing SNI CTF 2024</div>
      <div>🥇1st Place - COMPFEST 2024, University of Indonesia (SNI FLAKEITO) 👑</div>
      <div>🥈2nd Place - COMPFEST 2024, University of Indonesia (SNI Tabibito)</div>
      <div>🥇1st Place - IFEST 2024, Padjajaran University (SNI Tabibito) 👑</div>
      <div>🥉3rd Place - IFEST 2024, Padjajaran University (SNI FLAKEITO)</div>
      <div>🥇1st Place - National Cyber Week 2024, BINUS University (SNI Tabibito) 👑</div>
      <div>🥉3rd Place - Cyber Jawara National 2024, CSIRT.id and IdNSA (SNI Tabibito)</div>
    </>
  );
})()}